@model IEnumerable<SmartDrivingMVC.Models.ActivityType>
@{
    ViewData["Title"] = "Index";
}
<div class="container container-booking">
    <h2>All Activities</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vehicle.VehicleModel)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ActivityTypeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ActivityTypeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ActivityTypeId">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>